{
  "name": "gaucho",
  "version": "0.2.5",
  "description": "Minimalistic task launcher",
  "main": "main.js",
  "dependencies": {
    "electron-store": "^1.3.0",
    "jquery": "^3.1.1",
    "jquery-ui": "^1.12.1",
    "materialize-css": "^0.99.0",
    "vue": "^2.0.8",
    "yerbamate": "^2.0.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "electron": "^1.6.7",
    "electron-packager": "^9.1.0",
    "istanbul": "^0.4.5",
    "jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "sinon": "^3.3.0"
  },
  "scripts": {
    "test": "npm run clean && istanbul cover _mocha && npm run jshint",
    "start": "electron .",
    "start-dev": "NODE_ENV=dev npm start",
    "build-electron": "electron-packager . --overwrite --out builds --ignore tasks.json --ignore package-lock.json --ignore config.json --icon=resources/icon.png",
    "build-electron-all": "npm run clean && npm run build-electron-win && npm run build-electron-linux && npm run build-electron-mac",
    "build-electron-win": "electron-packager . --overwrite --out builds --ignore tasks.json --ignore package-lock.json --ignore config.json --platform=win32 --arch=x64 --icon=resources/icon.png",
    "build-electron-linux": "electron-packager . --overwrite --out builds --ignore tasks.json --ignore package-lock.json --ignore config.json --platform=linux --arch=x64 --icon=resources/icon.png",
    "build-electron-mac": "electron-packager . --overwrite --out builds --ignore tasks.json --ignore package-lock.json --ignore config.json --platform=darwin --arch=x64 --icon=resources/icon.png",
    "clean": "rm -rf builds config.json tasks.json coverage",
    "jshint": "jshint *.js app test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angrykoala/gaucho.git"
  },
  "keywords": [
    "electron",
    "task",
    "runner",
    "yerbamate",
    "gui",
    "graphical"
  ],
  "author": "angrykoala <angrykoala@outlook.es>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/angrykoala/gaucho/issues"
  },
  "homepage": "https://github.com/angrykoala/gaucho#readme"
}
