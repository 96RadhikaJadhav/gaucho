{
  "name": "Gaucho",
  "version": "0.6.0",
  "description": "Minimalistic task launcher",
  "main": "main.js",
  "dependencies": {
    "electron-store": "^4.0.0",
    "vuex": "^3.1.1",
    "mousetrap": "^1.6.3",
    "vue": "^2.6.10",
    "sweetalert2": "^8.15.3",
    "vue-clickaway": "^2.2.2",
    "vuedraggable": "^2.23.0",
    "yerbamate": "^2.1.2"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.10.1",
    "@vue/component-compiler-utils": "^3.0.0",
    "bulma": "^0.7.5",
    "bulma-switch": "^2.0.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "electron": "~6.0.2",
    "electron-builder": "^21.2.0",
    "eslint": "^6.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "husky": "^3.0.3",
    "mocha": "^6.2.0",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.22.9",
    "sinon": "^7.4.1",
    "spectron": "^8.0.0",
    "vue-template-compiler": "^2.6.10"
  },
  "scripts": {
    "build": "rm -rf public/ && parcel build src/app/index.html --target electron --public-url ./ --out-dir public --no-source-maps",
    "test": "cross-env NODE_ENV=test npm run build && mocha tests --recursive --exit",
    "start": "electron .",
    "start-dev": "npm run build && cross-env NODE_ENV=dev npm start",
    "eslint": "eslint main.js src tests --ext .vue --ext .js",
    "dist": "npm run build && rm -rf dist/ && electron-builder",
    "dist-all": "npm run build && npm run clean && electron-builder -wlm --x64",
    "pack": "npm run build && rm -rf dist/ && electron-builder --dir"
  },
  "build": {
    "appId": "angrykoala.gaucho",
    "productName": "Gaucho",
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "snap"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "directories": {
      "buildResources": "build_resources"
    }
  },
  "pre-commit": [
    "test",
    "clean"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angrykoala/gaucho.git"
  },
  "keywords": [
    "electron",
    "task",
    "launcher",
    "yerbamate",
    "gui",
    "graphical"
  ],
  "author": "angrykoala <angrykoala@outlook.es>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/angrykoala/gaucho/issues"
  },
  "homepage": "https://github.com/angrykoala/gaucho#readme"
}
