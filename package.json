{
  "name": "gaucho",
  "version": "0.5.2",
  "description": "Minimalistic task launcher",
  "main": "main.js",
  "dependencies": {
    "electron-store": "^2.0.0",
    "vuex": "^3.0.1",
    "mousetrap": "^1.6.2",
    "vue": "^2.5.16",
    "yerbamate": "^2.1.0"
  },
  "devDependencies": {
    "vue-clickaway": "^2.2.2",
    "sweetalert2": "^7.22.2",
    "bulma-switch": "^1.0.2",
    "vuedraggable": "^2.16.0",
    "browserify": "^16.2.2",
    "bulma": "^0.7.1",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "electron": "~2.0.2",
    "electron-builder": "^20.15.1",
    "electron-renderify": "0.0.2",
    "eslint": "^4.19.1",
    "eslint-plugin-vue": "^4.5.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^4.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.0",
    "pre-commit": "^1.2.2",
    "sass-lint": "^1.12.1",
    "sinon": "^6.0.0",
    "spectron": "^3.8.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "vue-devtools": "^4.1.4",
    "vueify": "^9.4.1"
  },
  "scripts": {
    "test": "NODE_ENV=test istanbul cover _mocha test test/*/*.test.js -- --exit && npm run lint && npm run sass-lint",
    "start": "electron .",
    "start-dev": "npm run gulp && cross-env NODE_ENV=dev npm start",
    "clean": "rm -rf config.json tasks.json coverage dist",
    "lint": "eslint main.js app.js gulpfile.js app test --ext .vue --ext .js",
    "lint-fix": "npm run lint -- --fix",
    "sass-lint": "sass-lint --verbose",
    "dist": "npm run gulp && electron-builder",
    "dist-all": "npm run gulp && npm run clean && electron-builder -wlm --x64",
    "gulp": "gulp build"
  },
  "build": {
    "appId": "angrykoala.gaucho",
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "directories": {
      "buildResources": "build_resources"
    }
  },
  "pre-commit": [
    "test",
    "clean"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angrykoala/gaucho.git"
  },
  "keywords": [
    "electron",
    "task",
    "launcher",
    "yerbamate",
    "gui",
    "graphical"
  ],
  "author": "angrykoala <angrykoala@outlook.es>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/angrykoala/gaucho/issues"
  },
  "homepage": "https://github.com/angrykoala/gaucho#readme"
}
